{
  "root": true,
  "extends": ["eslint:recommended", "prettier"],
  "env": {
    "node": true,
    "es6": true
  },
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "overrides": [
    {
      "files": ["**/__tests__/**/*"],
      "env": {
        "jest": true
      }
    }
  ],
  "ignorePatterns": ["**/*.js", "node_modules", "build"],
  "rules": {
    "no-console": "warn",
    "no-unused-vars": "error"
  }
}
